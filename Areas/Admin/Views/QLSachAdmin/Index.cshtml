@model IEnumerable<BookShop_Online.Areas.Admin.Data.SachDisplayVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="color: #0094ff">QUẢN LÝ DANH MỤC SÁCH</h2>
<h3 style="color: #00ff21">Tổng sách hiện có là:<strong> @ViewBag.message</strong></h3>

<p>
    @Html.ActionLink("Thêm mới", "AddBook", "QLSachAdmin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnhBia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenChuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenNhaXuatBan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.AnhBia)*@
                <img src="~/Images/Image_Books/@item.AnhBia" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhaXuatBan)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSach }, null) |
                @Html.ActionLink("Chi tiết", "DetailSach", new { id = item.MaSach }, null) |
                @Html.ActionLink("Xóa", "DeleteBook", new { id = item.MaSach }, null)
            </td>
        </tr>
    }

</table>
